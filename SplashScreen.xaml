<Window x:Class="E_Scooter.SplashScreen"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Welcome"
        Height="600" Width="350"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent">

    <!-- Grid mit Hintergrundbild -->
    <Grid>
        <Grid.Background>
            <ImageBrush ImageSource="/Photo/Background.png" Stretch="UniformToFill"/>
        </Grid.Background>

        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Logo -->
        <Image Source="/Photo/Logo.png"
               Width="73"
               HorizontalAlignment="Left"
               Grid.Row="0"
               Margin="5,3,0,52"
               RenderOptions.BitmapScalingMode="HighQuality"/>
        
        <!--Text for Logo-->
        <TextBlock Text="ScooTeq"
                   FontSize="16"
                   FontWeight="Bold"
                   Foreground="White"
                   HorizontalAlignment="Left"
                   VerticalAlignment="Top"
                   Margin="13,60,0,0"
                   FontFamily="Segoe UI"/>
        
        <!-- Get Started Button -->
        <Button Width="220"
                Height="50"
                Background="#00CFFF"
                Foreground="White"
                FontSize="18"
                FontFamily="Segoe UI"
                FontWeight="Bold"
                BorderThickness="0"
                Cursor="Hand"
                Click="GetStarted_Click"
                Grid.Row="1"
                Margin="175,185,0,250"
                HorizontalAlignment="Left">
            <Button.Template>
                <ControlTemplate TargetType="Button">
                    <Border Background="{TemplateBinding Background}"
                            CornerRadius="25"
                            Padding="10">
                        <StackPanel Orientation="Horizontal"
                                    HorizontalAlignment="Center"
                                    VerticalAlignment="Center">
                            <Image Source="/Photo/Login.png"
                                   Width="24"
                                   Height="24"
                                   Margin="0,0,0,0"/>
                            <TextBlock Text="Get Started..."
                                       Margin="5,0,40,2"/>
                        </StackPanel>
                    </Border>
                </ControlTemplate>
            </Button.Template>
        </Button>
    </Grid>
</Window>
